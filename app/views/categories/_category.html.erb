 <tr id=<%= "category_#{category.id}" %>>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td>
      <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_category_path(category), :remote => true %> |
      <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), category_path(category),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
    </td>
</tr>