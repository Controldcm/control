<%= simple_form_for @category, :html => { :remote => true, :class => 'form-horizontal' } do |f| %>

  <div class="responsive">

      <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
           <h3>Categorias de Insumos</h3>
      </div>

      <div class="modal-body">
          <%= f.error_notification %>
          <%= display_base_errors @category %>
      	  <div class="control-group">
              <label class="control-label" for="inputName">Nombre</label>
              <div class="controls">
                   <%= f.input :name, :label => false, :required => true,
                       :input_html => {:class => 'span3' } %>
              </div>
          </div>
      	  <div class="control-group">
              <label class="control-label" for="inputName">Descripci√≥n</label>
              <div class="controls">
                   <%= f.input :description, :label => false, :required => true,
                       :input_html => {:class => 'span3' } %>
              </div>
          </div>
      </div>

      <div id='fo' class="modal-footer">
           <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
           <%= f.button :submit, "Guardar", :class => 'btn-primary' %>
      </div>

  </div>

<% end %>
