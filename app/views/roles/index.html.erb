<%- model_class = Role -%>
<div class="page-header">
 <h3 id='order'>Roles</h3>
</div>
<table class="table table-striped">
 <thead>
   <tr>
     <th>Rol</th>
     <th>Acciones</th>
   </tr>
 </thead>
 <tbody>
     <%= render @roles %>
 </tbody>
 <tfoot>
 </tfoot>
</table>
<%= link_to 'Crear Rol', new_role_path, :remote => true, :class => 'btn btn-primary' %>
<div id='ocupa' class="pagination">
   <%= will_paginate(@roles, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
</div>