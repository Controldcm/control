<tr id=<%= "type_#{type.id}" %>>
        <td><%= link_to type.id, type_path(type), :remote => true %></td>
        <td><%= type.name %></td>
        <td>
          <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_type_path(type), :remote => true %> |
          <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), type_path(type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
        </td>
</tr>

