<tr id=<%= "input_#{input.id}" %>>
   <td><%= input.name %></td>
   <td><%= input.description %></td> 
   <td><%= input.category.name %></td>
   <td>
      <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_input_path(input), :remote => true %> |
      <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), input_path(input),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
   </td>
</tr>