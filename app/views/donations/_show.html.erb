<div class='donation'>
    <%- model_class = Donation -%>

    <div class="responsive">

        <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
             <h4>Donacion</h4>
        </div>

        <div class="modal-body">
            <dl class="dl-horizontal">
              <table class="table table-striped table-bordered table-condensed">
              	<tr>
              	 <th><strong>Responsable:</strong></th>
				 <td><%= @donation.user.name %></td>
				</tr>
				<tr>
				  <th><strong>Prenda:</strong></th>
				  <td><%= @donation.garment.name %></td>
				</tr>
				<tr>
				  <th><strong>Cantidad:</strong></th>
				  <td><%= @donation.amount %> Unidades</td>
				</tr>
				<tr>
				  <th><strong>Descripcion:</strong></th>
				  <td><%= @donation.description %></td>
				</tr>
				<tr>
				  <th><strong>Fecha:</strong></th>
				  <td><%= @donation.date %></td>
				</tr>
				<tr>
				  <th><strong>Justificacion:</strong></th>
				  <td><%= @donation.justification %></td>
				</tr>
				<tr>
				  <th><strong>Recibi√≥:</strong></th>
				  <td><%= @donation.receiver %></td>
				</tr>
			  </table>
			</dl>
        </div>

        <div id='fo' class="modal-footer">
             <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
</div>
