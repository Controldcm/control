<tr id=<%= "donation_#{donation.id}" %>>
    <td><%= donation.user.name %></td>
    <td><%= donation.garment.name %></td>
    <td><%= donation.amount %></td>
    <td><%= donation.description %></td>
    <td><%= donation.date %></td>
    <td><%= donation.justification %></td>
    <td><%= donation.receiver %></td>
    <td>
        <%= link_to image_tag('ver.png', :width=>'30', :title=>'Mostrar' ), donation_path(donation), :remote => true %>
        <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_donation_path(donation), :remote => true %>
        <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), donation_path(donation),
                    :method => :delete, :remote => true,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                               :default => 'Are you sure?')) } %>
    </td>
</tr>
