<%- model_class = Donation -%>
<div class="page-header">
  <h3 id='texto'>Donaciones</h3>
</div>
  <div id="buscar">
      <%= form_tag request.path, :class => "well", :method => 'get' do %>

        <div class = "row">
             <div class="span9">
                  <div class = "row">
                       <div class="span4">
                            <b>Donacion: </b> 
                            <%= text_field_tag :name, params[:name], 
                             :class=>"span3" %>
                       </div>
                       <div class="span1">
                           <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-success' %>
                       </div>
                  </div>
             </div>
        </div>

      <% end %>
  </div>
<table class="table table-hover table-striped  table-bordered">
  <thead>
    <tr>
      <th>Responsable</th>
      <th>Prenda</th>
      <th>Cantidad</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Justificacion</th>
      <th>Recibe:</th>	
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @donations %>
  </tbody>
  <tfoot>
  </tfoot>
</table>
<%= link_to 'Nueva Donacion', new_donation_path, :remote => true, :class => 'btn btn-primary' %>

<div id='ocupa' class="pagination">
   <ul>
      <%= will_paginate(@donations, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
   </ul>
   <p id='ocupa' class="pull-right">Total Donaciones : <%= @donations.count %></p>
</div>
