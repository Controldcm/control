<div class="page-header">
     <h3 id='order'>Ocupaciones</h3>
</div>
<br>
<div id="buscarr">
    <%= form_tag request.path, :class => "well", :method => 'get' do %> 

      <div class = "row">
           <div class="span9">
                <div class = "row">
                     <div class="span5">
                          <b>Ocupacion</b>
                          <%= text_field_tag :name, params[:name], 
                           :class=>"span4" %>
                     </div>
                     <div class="span1">
                         <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-primary' %>
                     </div>
                      <%= hidden_field_tag :ind, "1" %>
                </div>
           </div>
      </div>

    <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @occupations %>
  </tbody>
  <tfoot>
  </tfoot>
</table>

<%= link_to 'Nueva', new_occupation_path, :class => 'btn btn-primary',:remote => true %>


<div id='ocupa' class="pagination">
   <ul>
      <%= will_paginate(@occupations, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
   </ul>
   <p id='ocupa' class="pull-right">Total Recibos : <%= @occupations.count %></p>
</div>


