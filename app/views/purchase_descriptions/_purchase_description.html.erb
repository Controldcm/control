<tr id=<%= "purchase_description_#{purchase_description.id}" %>>
    <td><%= purchase_description.input.name %></td>
    <td><%= purchase_description.amount %></td>
    <td><%= purchase_description.total_value %></td>
    <td>
        <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_purchase_purchase_description_path(@purchase, purchase_description), :remote => true %>
        <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), purchase_purchase_description_path(@purchase, purchase_description),
                    :method => :delete, :remote => true,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                               :default => 'Estas Seguro?')) } %>
        
    </td>
</tr>