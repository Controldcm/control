<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Usuario</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Usuario</b></td>
               <td><%= @user.email %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Nombre</b></td>
               <td><%= @user.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Teléfono</b></td>
               <td><%= @user.phone %></td>
            </tr>
            <tr>
               <td><b class="pull-right">IP</b></td>
               <td><%= @user.ip %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Celular</b></td>
               <td><%= @user.mobile %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Ubicación</b></td>
               <td><%= @user.location %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Centro</b></td>
               <td><%= @user.center.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Ocupación</b></td>
               <td><%= @user.occupation.name %></td>
            </tr>
        </table>

        <div id='fo' class="modal-footer">
            <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>