<div class='login'>
<h1 id='ini'>LOGIN</h1>

<br>
<%= form_tag sessions_path, :method => :post, :class => "form-horizontal" do %>

    <div class="well">

        <div class="control-group">
        	<label class="control-label" for="inputEmail" placeholder='ejemplo@gmail.com'>Correo Electrónico</label>
			<div class="controls">
			     <%= text_field_tag :email %>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="inputEmail">Contraseña</label>
			<div class="controls">
				 <%= password_field_tag :password %>
			</div>
		</div>

		<div class="control-group">
			<div class="controls">
			    <%= submit_tag "Ingresar", :class => 'btn btn-success' %>
	            <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cancelar</a>
	        </div>
		</div>

	</div>



<% end %>
</div>