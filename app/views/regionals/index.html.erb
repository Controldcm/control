<br>
<h3 id='order'>Regionales SENA</h3>
<br><br><br>
<div id="buscarr">
   <%= form_tag request.path, :class => "well", :method => 'get' do %>

     <div class = "row">
          <div class="span9">
               <div class = "row">
                    <div class="span5">
                         <b>Regional</b>
                           <%= text_field_tag :name, params[:name], 
                          :class=>"span4" %>
                    </div>
                    <div class="span1">
                        <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-primary' %>
                    </div>
                     <%= hidden_field_tag :ind, "1" %>
               </div>
          </div>
     </div>

   <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
       <th>Nombre</th>
       <th>Director</th>
       <th>Tel√©fono</th>
       <th>Ip</th>
       <th></th>
     </tr>
    </thead>
  <tbody>
     <%= render @regionals %>
  </tbody>
</table>

<br />

<%= link_to 'Agregar Regional', new_regional_path, :remote => true, :class => 'btn btn-primary' %>

  <div id='ocupa' class="pagination">
   <%= will_paginate(@regionals, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
                                
   <p id='total' class="pull-right">Total Categorias : <%= @regionals.count %></p>
</div>