<br>
<%= javascript_include_tag "entrances.js" %>
<h3 id='order'>Nueva Entrada</h3>
<%= simple_form_for @entrance, :html => { :remote => true, :class => 'form-horizontal' } do |f| %>

  <div class="responsive">
      
     <div class="modal-body">  
         
        <%= f.error_notification %>
        <%= display_base_errors @entrance %>
        
        <div class="row">
            <div class="span6">

                <div class="control-group">
                    <label class="control-label" for="inputName">Prenda</label>
                    <div class="controls">
                        <%= f.association :input, :collection => Input.all(:order => 'name'),
                             :label => false, :required => true,
                             :input_html => {:class => 'span4' } %>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputName">Cantidad</label>
                    <div class="controls">
                         <%= f.input :amount,:label => false, :required => true,
                             :input_html => {:class => 'span4' } %>
                    </div>
                </div>
                <div class="control-group">
                  <label class="control-label" for="inputName">Fecha</label>
                  <div class="controls">
                      <%= f.input :date, :label => false, :required => true, :input_html => { :class => 'span4 datepicker' } %>
                   </div>
                </div>
            </div>
        </div> 
     
        <div id='fo' class="modal-footer">
            <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
            <%= f.button :submit, "Guardar", :class => 'btn-primary' %>
        </div>
  
  </div>
<% end %>
