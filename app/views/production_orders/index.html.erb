<div class="page-header">
 <h3 id='order'>Ordenes de Producción</h3>
</div>
<br>  
<div id="buscarr">
   <%= form_tag request.path, :class => "well", :method => 'get' do %>

     <div class = "row">
          <div class="span9">
               <div class = "row">
                    <div class="span5">
                         <b>Produccion</b>
                           <%= text_field_tag :name, params[:name], 
                          :class=>"span4" %>
                    </div>
                    <div class="span1">
                        <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-primary' %>
                    </div>
                     <%= hidden_field_tag :ind, "1" %>
               </div>
          </div>
     </div>

   <% end %>
</div>
<table class="table table-striped">
 <thead>
   <tr> 
     <th>Fecha Programacion</th>
     <th>Cliente</th>
     <th># de Orden de producción</th>
     <th>Prenda</th>
     <th>Cantidad Programada</th>
     <th></th>
   </tr>
 </thead>
   <tbody>
      <%= render @production_orders %>
   </tbody>
</table>

<%= link_to "Nueva Orden de Produccion", new_production_order_path, :remote => true, 
   :class => 'btn btn-primary' %>
 <div id='porder' class="pagination">
   <%= will_paginate(@production_orders, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
  
</div>
<p id='total' name="total" class="pull-right">Total Ordenes : <input type="text" id='total_e' name="total_e" value="<%= @production_orders.count %>"></p>