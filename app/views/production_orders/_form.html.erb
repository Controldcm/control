<br>
<h3 id='order'>Orden de Producción</h3>
<%= javascript_include_tag "production_orders.js" %>

<%= simple_form_for(@production_order, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <div class="form-inputs">
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <td>Fecha de Programación</td>
        <td><%= f.input :programing_date, :label => false, :input_html => { :class => 'datepicker' } %></td>
       </tr>
       <tr>
        <td>Cliente</td>
        <td><%= f.association :client, :collection => Client.all(:order => 'name'), :label => false %></td>
       </tr>  
        <tr>
        <td>OP</td>
        <td><%= f.input :op, :label => false %></td>
       </tr> 
       <tr>
        <td>Prenda</td>
        <td><%= f.association :garment, :collection => Garment.all(:order => 'name'), :label => false %></td>
       </tr>
       <tr>
        <td>Cantidad Programada</td>
        <td><%= f.input :programed_amount, :label => false %></td>
       </tr>
    </table>
  </div>


  <div id='fo' class="form-actions">
    <%= f.button :submit, 'Crear', :class=>'btn btn-primary' %>
    <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
  </div>
<% end %>
