<tr id=<%= "production_order_#{production_order.id}" %>>
    <td><%= production_order.programing_date %></td>
    <td><%= production_order.client.name %></td>
    <td><%= production_order.op %></td>
    <td><%= production_order.garment.name %></td>
    <td><%= production_order.programed_amount %> Unidades</td>
    <td>
        <%= link_to image_tag('ver.png', :width=>'30', :title=>'Mostrar' ), production_order_path(production_order), :remote => true %> |
        <%= link_to image_tag('edit.png', :width=>'30', :title=>'Editar' ), edit_production_order_path(production_order), :remote => true %> |
        <%= link_to image_tag('process.png', :width=>'30', :title=>'Procesos' ), production_order_procedures_path(production_order), :remote => true %> |
        <%= link_to image_tag('costopp.png', :width=>'30', :title=>'Costos de Preproduccion' ), production_order_preproduction_costs_path(production_order), :remote => true %> |
        <%= link_to image_tag('destroy.png', :width=>'30', :title=>'Eliminar' ), production_order_path(production_order),
                    :method => :delete, :remote => true,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                               :default => 'Confirmar?')) } %>  
    </td>
  </tr>