<%- model_class = ReceiptHeader-%> 
<div class="page-header">
  <h1>Recibos</h1>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Consecutivo</th>
      <th>Cliente</th>
      <th>Direccion</th>
      <th>Ciudad</th>
      <th>Identificacion</th>
      <th>Telefono</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @receipt_headers %>
  </tbody>
</table>
<%= link_to 'Nuevo Encabezado', new_receipt_header_path, :remote => true, :class => 'btn btn-primary' %>

<div class="pagination">
   <ul>
      <%= will_paginate(@receipt_headers, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
   </ul>
   <p id='total' class="pull-right">Total Recibos : <input type="text" id='total_r' name="total_r" value="<%= @receipt_headers.count %>"></p>
</div>