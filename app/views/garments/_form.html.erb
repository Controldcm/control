  <%= simple_form_for @garment, :html => { :class => 'form-horizontal', :remote => true } do |f| %>

  <div class="responsive">

      <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
           <h3>Tipos de Prendas</h3>
           <img id='lazyim' src="assets/logo_sena.png">
      </div>

      <div class="modal-body">

          <div class="control-group">
              <label class="control-label" for="inputName">Descripción</label>
              <div class="controls">
                   <%= f.input :name, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Referencia</label>
              <div class="controls">
                   <%= f.input :reference, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Código</label>
              <div class="controls">
                   <%= f.input :code, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Género</label>
              <div class="controls">
                   <%= f.input :gender, :as => :radio, :label => false,
                       :collection => [ ['Masculino', "1"], ['Femenino', "2"], ['No Aplica', "3"] ] %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Tipo de Prenda</label>
              <div class="controls">
                   <%= f.association :type, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Existencia en Bodega</label>
              <div class="controls">
                   <%= f.input :stock, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Existencia en Almacen</label>
              <div class="controls">
                   <%= f.input :store, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>
          <div class="control-group">
              <label class="control-label" for="inputName">Precio en almacén</label>
              <div class="controls">
                   <%= f.input :stock_price, :label => false, :required => true,
                       :input_html => {:class => 'span4' } %>
              </div>
          </div>

      </div>

      <div id='fo' class="modal-footer">
           <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
           <%= f.button :submit, "Guardar", :class => 'btn-primary' %>
      </div>

  </div>

<% end %>


