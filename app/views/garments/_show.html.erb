<div class='garment'>
    <%- model_class = Garment -%>

    <div class="responsive">

        <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
             <h4>Prendas de Confección</h4>
        </div>

        <div class="modal-body">
            <dl class="dl-horizontal">
            <dt><strong>Nombre:</strong></dt>
            <dd><%= @garment.name %></dd>
            <dt><strong>Referencia:</strong></dt>
            <dd><%= @garment.reference %></dd>
            <dt><strong>Código:</strong></dt>
            <dd><%= @garment.code %></dd>
            <dt><strong>Genero:</strong></dt>
            <dd><%= @garment.gender %></dd>
            <dt><strong>Línea:</strong></dt>
            <dd><%= @garment.type.name %></dd>
            <dt><strong>En Bodega:</strong></dt>
            <dd><%= @garment.stock %> Unidades</dd>
            <dt><strong>En Almacen:</strong></dt>
            <dd><%= @garment.store %> Unidades</dd>
            </dl>
        </div>

        <div id='fo' class="modal-footer">
             <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
</div>
