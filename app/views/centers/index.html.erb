<div class="page-header">
    <h3 id='order'>Centros de Formaci√≥n</h3>
</div>
<br>
<div id="buscarr">
   <%= form_tag request.path, :class => "well", :method => 'get' do %>

     <div class = "row">
          <div class="span9">
               <div class = "row">
                    <div class="span5">
                         <b>Centro de F</b>
                           <%= text_field_tag :name, params[:name], 
                          :class=>"span4" %>
                    </div>
                    <div class="span1">
                        <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-primary' %>
                    </div>
                     <%= hidden_field_tag :ind, "1" %>
               </div>
          </div>
     </div>

   <% end %>
</div>
<table class="table table-striped">

 <thead>
   <tr>
     <th>Nombre</th>
     <th></th>
   </tr>
 </thead>
 <tbody>
     <%= render @centers %>
 </tbody>
 <tfoot>
 </tfoot>
</table>

<%= link_to 'Nuevo', new_center_path, :remote => true, :class => 'btn btn-primary' %>


 <div id='centers' class="pagination">
   <%= will_paginate(@centers, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
   <p id='total' class="pull-right">Total Clientes : <%= @centers.count %></p>
</div>