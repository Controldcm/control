<h1>Listing conditions</h1>

<table>
 <tr>
   <th>Name</th>
   <th>Description</th>
   <th></th>
   <th></th>
   <th></th>
 </tr>

<% @conditions.each do |condition| %>
 <tr>
   <td><%= condition.name %></td>
   <td><%= condition.description %></td>
   <td><%= image_tag condition.image.url(:small) %></td>
   <td><%= link_to 'Show', condition %></td>
   <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
   <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 </tr>
<% end %>
</table>

<br />

<%= link_to 'New Condition', new_condition_path %>



</div>
  <div id='pagination' class="pagination">
   <%= will_paginate(@conditions, :renderer => WillPaginate::ActionView::LinkRenderer,
                                :previous_label => '&laquo; Anterior', 
                                :next_label => 'Siguiente &raquo;') %>
                                
   <p id='total' class="pull-right">Total Condiciones : <%= @conditions.count %></p>
</div>
