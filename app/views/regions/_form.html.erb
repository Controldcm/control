<%= simple_form_for @region, :html => { :remote => true, :class => 'form-horizontal' } do |f| %>

  <div class="responsive">
      
     <div class="modal-body">  
         
        <%= f.error_notification %>
        <%= display_base_errors @region %>
        
        <div class="row">
            <div class="span6">

                <div class="control-group">
                    <label class="control-label" for="inputName">Nombre</label>
                    <div class="controls">
                         <%= f.input :name,
                             :label => false, :required => true,
                             :input_html => {:class => 'span4' } %>
                    </div>
                </div>
               <div class="control-group">
                    <label class="control-label" for="inputName">Pais</label>
                    <div class="controls">
                         <%= f.input :country_id,
                             :label => false, :required => true,
                             :input_html => {:class => 'span4' } %>
                    </div>
                </div>
            </div>
        </div>
     
        <div id='fo' class="modal-footer">
            <a href="#" class="btn btn-inverse" onclick="$.lazybox.close()">Cerrar</a>
            <%= f.button :submit, "Guardar", :class => 'btn-primary' %>
        </div>
  
  </div>
<% end %>
